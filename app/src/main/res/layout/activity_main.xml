<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_recording"
        android:id="@+id/bt_start_record"
        android:layout_below="@+id/bt_stop_playback"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_recording"
        android:id="@+id/bt_stop_record"
        android:layout_marginTop="47dp"
        android:layout_alignTop="@+id/bt_start_record"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_playback"
        android:id="@+id/bt_start_playback"
        android:layout_below="@+id/bt_stop_record"
        android:layout_alignStart="@+id/bt_stop_record" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_playback"
        android:id="@+id/bt_stop_playback"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/bt_start_record" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:layout_above="@+id/bt_stop_playback"
        android:layout_alignEnd="@+id/bt_stop_playback"
        android:layout_marginBottom="56dp" />

</RelativeLayout>
